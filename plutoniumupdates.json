[
    {
        "UpdateStageName":"Plutonium Launcher Download",
        "UpdateSourcePlatform":"All",
        "UpdateSource":"FetchURL",
        "UpdateSourceData":"https://cdn.plutonium.pw/updater/plutonium.exe",
        "UpdateSourceTarget":"{{$FullBaseDir}}",
        "OverwriteExistingFiles":true
    },
    {
        "UpdateStageName":"Client Installation",
        "UpdateSourcePlatform":"Windows",
        "UpdateSource":"Executable",
        "UpdateSourceData":"cmd.exe",
        "UpdateSourceArgs":"/C cd plutonium\\server && plutonium.exe -install-dir ."
    },
    {
        "UpdateStageName":"Initialise Wine",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"Executable",
        "UpdateSourceData":"/bin/bash",
        "UpdateSourceArgs":"-c 'WINEPREFIX=\"{{$FullRootDir}}.wine\" WINEARCH=win32 /usr/bin/wineboot --init --update'"
    },
    {
        "UpdateStageName":"Client Installation",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"Executable",
        "UpdateSourceData":"/bin/bash",
        "UpdateSourceArgs":"-c 'cd .plutonium\\server && export WINEPREFIX=\"{{$FullRootDir}}.wine\"; export WINEARCH=win32; export WINEDEBUG=-all; /usr/bin/wine plutonium.exe -install-dir .'"
    },
